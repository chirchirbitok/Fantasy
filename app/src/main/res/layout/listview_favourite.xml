<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="2dp">


            <ImageView
                android:id="@+id/info"
                android:layout_width="31dp"
                android:layout_height="30dp"
                android:adjustViewBounds="false"
                app:srcCompat="@drawable/info" />

            <TextView
                android:id="@+id/jina"
                android:layout_width="97dp"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/info"
                android:text="Fabianski"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/miaka"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/jina"
                android:text="10"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/breed"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/miaka"
                android:text="Dorper"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/gender24"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginStart="11dp"
                android:layout_toEndOf="@+id/breed"
                android:text="Ram"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/points7"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/gender24"
                android:text="10"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="18sp" />

         




        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>